<% if notice %>
	<p class="alert alert-success" id="notice"><%= notice %></p>
<% end %>

<%= content_for :title do %>
	<h4 style="margin:0px;">Konu Görüntüle</h4>
<% end %>

<table class="table table-striped">
	<tr>
		<td><strong>Sınıf:</strong></td>
		<td><%= @admin_konuanlatimi.sinif %></td>
	</tr>
	<tr>
		<td><strong>Ünite Adı:</strong></td>
		<td><%= Admin::Unite.find(@admin_konuanlatimi.unite_id).uniteadi %></td>
	</tr>
	<tr>
		<td><strong>Konu Adı:</strong></td>
		<td><%= @admin_konuanlatimi.konuadi %></td>
	</tr>
	<tr>
		<td><strong>Kavram:</strong></td>
		<td><%= @admin_konuanlatimi.kavram %></td>
	</tr>
	<tr>
		<td><strong>Metin:</strong></td>
		<td><%= @admin_konuanlatimi.metin.html_safe %></td>
	</tr>
	<tr>
		<td><strong>Dosya:</strong></td>
		<td><%= link_to "Dosya Görüntüle", @admin_konuanlatimi.dosya.url %></td>
	</tr>
</table>
<%= link_to "Konu Anlatımı Listesine Geri Git", admin_konuanlatimis_path %>
