<%= form_with(model: admin_unite, local: true, html: { multipart: true }) do |form| %>
  <% if admin_unite.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(admin_unite.errors.count, "error") %> prohibited this admin_unite from being saved:</h2>

      <ul>
      <% admin_unite.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<table class="table table-striped">
		<tr>
			<td><strong>Sınıf:</strong></td>
			<td><%= form.select  :sinif, options_for_select([["5. Sınıf", 5], ["6. Sınıf", 6], ["7. Sınıf", 7],["8. Sınıf", 8]], selected: @admin_unite.sinif),{include_blank: true}, id: :admin_unite_sinif, class: "form-control" %></td>
		</tr>
		<tr>
			<td><strong>Ünite Adı:</strong></td>
			<td><%= form.text_field :uniteadi, id: :admin_unite_uniteadi, class: "form-control" %></td>
		</tr>
		<tr>
			<td><strong>Açıklama:</strong></td>
			<td><%= form.cktext_area :aciklama, id: :admin_unite_aciklama, ckeditor: { language: 'tr'} %></td>
		</tr>
		<tr>
      <td><strong>Ünite Resmi:</td></strong>
        <% if @admin_unite.uniteresmi.exists? %>
          <td><%= image_tag @admin_unite.uniteresmi.url(:thumb) %><br><br>
         <%= form.file_field :uniteresmi, id: :admin_unite_uniteresmi, class: "form-control" %></td>
        <% else %>    
          <td><%= form.file_field :uniteresmi, id: :admin_unite_uniteresmi, class: "form-control" %></td>
        <% end %>
		</tr>
		<tr>
			<td colspan=2><%= form.submit :Kaydet,  class: "btn btn-primary btn-block" %></td>
		</tr>	
	</table>
<% end %>
