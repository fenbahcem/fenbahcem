<% if notice %>
	<p class="alert alert-success" id="notice"><%= notice %></p>
<% end %>

<%= content_for :title do %>
	<h4 style="margin:0px;">Resim Görüntüle</h4>
<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Resim Başlığı</th>
      <th>Resim</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_fotogaleris.each do |admin_fotogaleri| %>
      <tr>
        <td><%= admin_fotogaleri.baslik %></td>
        <td><%= image_tag admin_fotogaleri.resim.url(:thumb) %></td>
        <td><%= link_to 'Görüntüle', admin_fotogaleri %></td>
        <td><%= link_to 'Düzenle', edit_admin_fotogaleri_path(admin_fotogaleri) %></td>
        <td><%= link_to 'Sil', admin_fotogaleri, method: :delete, data: { confirm: 'Silmek istediğinize eminmisiniz?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="col-lg-12 col-sm-12 col-xs-12">
  <%= will_paginate @admin_fotogaleris, :renderer => BootstrapPaginationHelper::LinkRenderer, class:"text-center", previous_label: "Önceki Sayfa", next_label: "Sonraki Sayfa" %>
</div>