<%= form_with(model: admin_proje, local: true) do |form| %>
  <% if admin_proje.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(admin_proje.errors.count, "error") %> prohibited this admin_proje from being saved:</h2>

      <ul>
      <% admin_proje.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<table class="table table-striped">
		<tr>
			<td><strong>Proje Adı:</strong></td>
			<td><%= form.text_field :projeadi, id: :admin_proje_projeadi, class: "form-control" %></td>
		</tr>
		<tr>
			<td><strong>Proje Özeti:</strong></td>
			<td><%= form.cktext_area :projeaciklama, id: :admin_proje_projeaciklama, ckeditor: { language: 'tr'} %></td>
		</tr>
		<tr>
			<td><strong>Kavramlar:</strong></td>
			<td><%= form.cktext_area :kavram, id: :admin_proje_kavram, ckeditor: { language: 'tr'} %></td>
		</tr>
		<tr>
			<td><strong>Projenin Yapılışı:</strong></td>
			<td><%= form.cktext_area :nasil, id: :admin_proje_nasil, ckeditor: { language: 'tr'} %></td>
		</tr>
		<tr>
			<td><strong>Sonuç:</strong></td>
			<td><%= form.cktext_area :sonuc, id: :admin_proje_sonuc, ckeditor: { language: 'tr'} %></td>
		</tr>
    <tr>
      <td><strong>Ek Dosya:</strong></td>
      <% if @admin_proje.ek.exists? %>
        <td>
          Ekli Dosya Adı: <%= @admin_proje.ek_file_name %><br /><br />
          <%= form.file_field :ek, id: :admin_proje_ek, class: "form-control" %>
        </td> 
      <% else %>
			  <td><%= form.file_field :ek, id: :admin_proje_ek, class: "form-control" %></td>  
      <% end %>
		</tr>
		<tr>
			<td colspan=2><%= form.submit :Kaydet,  class: "btn btn-primary btn-block" %></td>
		</tr>	
	</table>
<% end %>
