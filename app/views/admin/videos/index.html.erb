<% @videotur = { 0 => "Deney Videosu", 1 => "Diğer Videolar" } %>	

<% if notice %>
	<p class="alert alert-success" id="notice"><%= notice %></p>
<% end %>

<%= content_for :title do %>
	<h4 style="margin:0px;">Video Listesi</h4>
<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Başlık</th>
      <th>Video Link</th>
      <th>Video Tür</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_videos.each do |admin_video| %>
      <tr>
        <td><%= admin_video.baslik %></td>
        <td><%= admin_video.videolink %></td>
        <td><%= @videotur[admin_video.tur] %></td>
        <td><%= link_to 'Görüntüle', admin_video %></td>
        <td><%= link_to 'Düzenle', edit_admin_video_path(admin_video) %></td>
        <td><%= link_to 'Sil', admin_video, method: :delete, data: { confirm: 'Silmek istediğinize eminmisiniz?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="col-lg-12 col-sm-12 col-xs-12">
  <%= will_paginate @admin_videos, :renderer => BootstrapPaginationHelper::LinkRenderer, class:"text-center", previous_label: "Önceki Sayfa", next_label: "Sonraki Sayfa" %>
</div>
