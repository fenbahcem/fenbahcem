<%= content_for :pagetitle do %>
	FenBahçem Fotogaleri
<% end %>

<style>
.thumbnail {
	width: 100%;
	height: 100%;
}
</style>

<link href="https://sachinchoolur.github.io/lightgallery.js/static/css/animate.css" rel="stylesheet">
<link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700' rel='stylesheet' type='text/css'>
<link href="https://sachinchoolur.github.io/lightgallery.js/lightgallery/css/lg-transitions.css" rel="stylesheet">
<link href="https://sachinchoolur.github.io/lightgallery.js/lightgallery/css/lightgallery.css" rel="stylesheet">

<%= javascript_include_tag 'ogrenci' %>

<div id="lightgallery">
	<% @fotogaleri.each do |f| %>
		<%= link_to f.resim.url, { class:"col-lg-3 col-sm-4 col-xs-6", style: "height:157px; margin-bottom:30px;" } do %>
			<%= image_tag f.resim.url, class:"thumbnail img-responsive" %>
		<% end %>
	<% end %>
</div>

<div class="col-lg-12 col-sm-12 col-xs-12">
	<%= will_paginate @fotogaleri, :renderer => BootstrapPaginationHelper::LinkRenderer, class:"text-center", previous_label: "Önceki Sayfa", next_label: "Sonraki Sayfa" %>
</div>
