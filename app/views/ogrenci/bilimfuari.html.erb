<%= content_for :pagetitle do %>
	FenBahçem Bilim Fuarı
<% end %>
<script>
$(document).ready(function() {
    $('[id^=detail-]').hide();
    $('.toggle').click(function() {
        $input = $( this );
        $target = $('#'+$input.attr('data-toggle'));
        $target.slideToggle();
    });
});
</script>

	<div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Projeler</h3>
        </div>   
				<ul class="list-group">
					<% @proje.each_with_index do |p,i| %>
            <li class="list-group-item">
                <div class="row toggle" id="dropdown-detail-<%= i + 1 %>" data-toggle="detail-<%= i + 1 %>">
                    <div class="col-xs-10">
                       <%= p.projeadi %>
                    </div>
                    <div class="col-xs-2"><i class="fa fa-chevron-down pull-right"></i></div>
                </div>
                <div id="detail-<%= i + 1 %>">
									<hr></hr>
											<div class="container">
                        <div class="fluid-row">
                            <div class="col-xs-2">
															<strong>Proje Özeti:</strong>
                            </div>
                            <div class="col-xs-10">
                                <%= p.projeaciklama.html_safe %>
														</div>
														<div class="col-xs-11">
															<%= link_to "İncele", {controller: "ogrenci", action: "proje_show", id: p.id}, class: "btn btn-primary btn-block" %>
														</div>
                        </div>	
												</div>
                </div>
						</li>
						<% end %> 
				</ul>
	</div>
