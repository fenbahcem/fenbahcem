<%= content_for :pagetitle do %>
	FenBahçem <%= @unitesinif %>. Sınıf Fen Bilimleri Üniteleri
<% end %>
<style>
    .glyphicon { margin-right:10px;}
    .section-box h2 { margin-top:0px;}
    .section-box h2 a { font-size:15px; }
    .glyphicon-heart { color:#e74c3c;}
    .glyphicon-comment { color:#27ae60;}
    .separator { padding-right:5px;padding-left:5px; }
    .section-box hr {margin-top: 0;margin-bottom: 5px;border: 0;border-top: 1px solid rgb(199, 199, 199);}
</style>

<div class="col-md-12">
<h3 style="margin-top:0px"><%= @unitesinif %>. Sınıf Fen Bilimleri Üniteleri</h3>
<% if @unite.count > 0 %>
		<% @unite.each do |u|  %>
		<div class="well well-sm">
			<div class="row">
						<div class="col-xs-3 col-md-3 text-center">
							<%= image_tag u.uniteresmi.url(:thumb), class: "img-rounded img-responsive" %>
						</div>
						<div class="col-xs-9 col-md-9 section-box">
								<h4>
										<%= u.uniteadi %>
								</h4>
								<p><%= u.aciklama.html_safe %></p>
								<% if u.konuanlatimi.count > 0 %>
									<p>
										<%= link_to "Konuları Görüntüle", { controller: "ogrenci", action: "unite_konu",sinif: u.sinif, uniteadi: u.uniteadi, unite_id: u.id }, class: "btn btn-primary btn-block"  %>
									</p>
								<% else %>
									<p>Eklenmiş konu anlatımı bulunmamaktadır. Konu anlatımı eklediğimiz zaman anasayfa duyurular kısmından duyrulacaktır.</p>
								<% end %>	
								<hr />
								<div class="row rating-desc">
										<div class="col-md-12">
											<span class="glyphicon glyphicon-th-list"></span><%= Admin::Konuanlatimi.where(sinif: params[:sinif]).where(unite_id: u.id).count %><span class="separator">|</span>
											<span class="glyphicon glyphicon-hourglass"></span><%= sayac(params[:sinif], 1, u.id) %><span class="separator">|</span>
											<span class="glyphicon glyphicon-check"></span><%= sayac(params[:sinif], 2, u.id) %><span class="separator">|</span>
											<span class="glyphicon glyphicon-pencil"></span><%= sayac(params[:sinif], 3, u.id) %><span class="separator">|</span>
											<span class="glyphicon glyphicon-file"></span><%= sayac(params[:sinif], 4, u.id) %><span class="separator">|</span>
											<span class="glyphicon glyphicon-book"></span><%= sayac(params[:sinif], 5, u.id) %><span class="separator">|</span>
											<span class="glyphicon glyphicon-road"></span><%= sayac(params[:sinif], 6, u.id) %><span class="separator">|</span>
											<span class="glyphicon glyphicon-equalizer"></span><%= sayac(params[:sinif], 7, u.id) %><span class="separator">|</span>
											<span class="glyphicon glyphicon-list-alt"></span><%= sayac(params[:sinif], 8, u.id) %><span class="separator">|</span>
											<span class="glyphicon glyphicon-star"></span><%= sayac(params[:sinif], 9, u.id) %></span>
										</div>
								</div>
						</div>
				</div>
		</div>
	<% end %>
<% else %>
	<%= image_tag "notfound.jpg", style:"width:100%;" %>
		<% end %>
		</div>
